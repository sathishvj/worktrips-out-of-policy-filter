{
  "name": "WorkTrips Out of Travel Policy Filter",
  "description": "Removes hotels that are out of travel policy from WorkTrips",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.worktrips.com/*"],  
      "js": ["content_script.js"]
    }
  ]
}
